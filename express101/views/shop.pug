extends layout/main-layout.pug

block styles 
  link(rel="stylesheet", href="/css/product.css")

block content 
  main
    if products.length > 0 
      .grid 
        each product in products
          article.card.product-item
            header.card__header 
              h1.product__title #{product.title}
            .card__image 
              img(src="https://shadycharacters.co.uk/wp/wp-content/uploads/2016/12/Book_IMG_1754-1-e1481474081467.jpg", alt="Book image")
            .card-content 
              h2.product__price 19.99
              p.product__description A very interesting book about whales 
            .card-actions 
              button.btn Add to cart
    else 
      h1 No products